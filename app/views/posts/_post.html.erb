<li id="post-<%= post.id %>">
  <p class="content"><%= post.user.name %>    <%= post.user.lastname %></p>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <% if authenticated_user? %>
    <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>

<% if post.comments.any?%>
<h3>Comments (<%= post.comments.count %>)</h3>
  <% @comments.each do |comment| %>
    <li>    
      <span><%= comment.text%></span>
      <span><%= comment.user.name%></span>    <span><%= comment.user.lastname%></span>
      <span class="timestamp">
      Posted <%= time_ago_in_words(comment.created_at) %> ago.   

      <% if authenticated_comment?(comment.user.name) %>
        <%= link_to "delete", post_comment_path(post, comment), method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
    </li> 
  <% end %>
<% end %>


<%= form_for(post.comments.new, url: post_comments_path(post)) do |f| %>
  <div class="field">
      <%= f.text_field :text, placeholder: "Comment..." %>
  </div>
    <%= f.submit "Publish comment", class: "btn btn-primary btn-publish" %>
<% end %>
 
