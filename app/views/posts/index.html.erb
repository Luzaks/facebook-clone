<h1>Timeline</h1>

<ul class="text-center">
  <% @posts.each do |post| %>
    <li>    
    <p>Author:<%= link_to post.user.name, post.user %></p>
    <p>Content: <%= post.content%></p>
    <span> Posted <%= time_ago_in_words(post.created_at) %> ago. </span>
    <br>    
    </li> 
    <br>
  <% end %>
</ul>
